<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Form -->

  <record id="library_book_form_view" model="ir.ui.view">
    <field name="name">library.book.form.view</field>
    <field name="model">library.book</field>
    <field name="arch" type="xml">
      <form>
        <field name="image" widget="image"/>
        <header>
          <button type="object" name="action_library_book_information_author" string="Author Information"
          class="btn btn-primary"/>
        </header>
        <group>
          <field name="name"/>
          <field name="author"/>
          <field name="sales"/>
          <field name="active"/>
          <field name="isbn"/>
          <field name="category_id"/>
        </group>
        <group>
          <field name="description"/>
        </group>
      </form>
    </field>
  </record>

  
    <!-- Tree -->

      <record id='library_book_tree_view' model='ir.ui.view'>
      <field name='name'>library.book.tree.view</field>
      <field name='model'>library.book</field>
      <field name="arch" type="xml">
        <tree string="Tree Book">
          <field name="name"/>
          <field name="active"/>
          <field name="winner"/>        <!-- ttrs="{'invisible': [('name', '!=', 'winner')]}" -->
          <field name="isbn"/>
        </tree>
      </field>
    </record>


    <!-- Action -->

    <record id="action_library_book" model="ir.actions.act_window">
      <field name="name">Books</field>
      <field name="res_model">library.book</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>
    

      <!--Menu-->

      <menuitem id="library_menu_root" name="Library" sequence="1"/>
      <menuitem id="library_menu_root_category" name="Library" sequence="1" parent="library_menu_root"/>
      <menuitem id="action_library_menu_book" name="Books" sequence="1" parent="library_menu_root_category"
                action="action_library_book"/>

</odoo>