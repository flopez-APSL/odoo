<odoo>
  <data>
    <!-- tree view definition -->

    <record model="ir.ui.view" id="modulo_basico.list">
      <field name="name">modulo_basico list</field>
      <field name="model">modulo.fields</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>



    <!-- Vista del formulario -->

    <record id="view_form_modulo_basico" model="ir.ui.view">
        <field name="name">Formulario</field>
        <field name="model">modulo.fields</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fieldchar"/>
                        <field name="booleano"/>
                        <field name="fieldfloat"/>
                        <field name="integerfield"/>
                        <field name="fielddate"/>
                        <field name="fielddatetime"/>
                        <field name="fieldhtml"/>
                        <field name="fieldtext"/>
                        <field name="fieldchoose"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


